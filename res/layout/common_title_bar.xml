<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/title_bar"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/fragment_title_head"
    android:background="@drawable/title_bar" >
    
		<RelativeLayout
            	android:id="@+id/title_btn_left"
	            android:layout_alignParentLeft="true"
	            android:layout_centerVertical="true"
	            android:layout_marginLeft="0dp"
				android:layout_width="wrap_content" 
				android:layout_height="@dimen/fragment_title_head" >

			<Button
			    android:id="@+id/title_btn_left_btn"
			    android:layout_width="wrap_content"
			    android:layout_height="40dp"
			    android:layout_centerVertical="true"
			    android:layout_marginLeft="5dp"
			    android:background="@color/white"
			    android:textColor="@color/blue"
			    android:textSize="16sp" />

		</RelativeLayout>
		
		<TextView 
            android:id="@+id/title_txt"
            android:layout_height="40dp"
    		
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textColor="@color/blue"
            android:textSize="20sp"
            android:textStyle="bold"/>

		<RelativeLayout
            android:id="@+id/title_btn_right_sec"
            android:layout_width="@dimen/fragment_title_head"
            android:layout_height="@dimen/fragment_title_head"
            android:layout_alignParentTop="true"
            android:layout_marginRight="@dimen/fragment_title_head"
	            android:layout_alignParentRight="true" >

			<ImageView
                android:id="@+id/title_btn_right_sec_img"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
			    
                android:layout_centerVertical="true" />
		</RelativeLayout>

		<RelativeLayout
            	android:id="@+id/title_btn_right"
	            android:layout_alignParentRight="true"
	            android:layout_centerVertical="true"
	            android:layout_marginRight="0dp"
				android:layout_width="@dimen/fragment_title_head" 
				android:layout_height="@dimen/fragment_title_head" >
			<ImageView
		            android:id="@+id/title_btn_right_img"
		            android:layout_height="40dp"
		            android:layout_centerVertical="true"
		            android:layout_width="wrap_content"/>
		</RelativeLayout>
		<!-- 
				android:background="@drawable/title_bar_layout_selector" -->

		<LinearLayout
            android:id="@+id/common_constact"
            android:layout_height="wrap_content"
            android:layout_width="150dp"
            android:orientation="horizontal"
            android:layout_centerInParent="true">
			<Button 
                android:id="@+id/constact_group"
                style="@style/top_group"
                android:text="@string/track_list"/>
			<Button 
                android:id="@+id/constact_all"
                style="@style/top_all"
                android:text="@string/track_map"/>
		</LinearLayout>


